<h1>Create 100-1000 USD Transaction</h1>
<ul class="links-list">
  <li><%= link_to "Create 0-100 USD Transaction", new_transaction_path(type: 'small') %></li>
  <li><%= link_to "Create >1000 USD Transaction", new_transaction_path(type: 'extra') %></li>
</ul>

<%= form_with model: @transaction do |form| %>
  <%= form.hidden_field :from_currency, value: 'USD' %>
  <%= hidden_field_tag :type, 'large' %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, autocomplete: 'off' %>
    <%= error_message_for(@transaction, :first_name) %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, autocomplete: 'off' %>
    <%= error_message_for(@transaction, :last_nae) %>
  </div>

  <div class="form-group">
    <%= form.label :from_amount, 'Amount(USD)' %>
    <%= form.text_field :from_amount, autocomplete: 'off' %>
    <%= error_message_for(@transaction, :from_amount) %>

  </div>

  <div class="form-group">
    <%= form.label :to_currency %>
    <%= form.select :to_currency, Transaction::AVAILABLE_CURRENCIES - ['USD'] %>
    <%= error_message_for(@transaction, :to_currency) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

